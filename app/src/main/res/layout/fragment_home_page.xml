<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".mainfragment.HomePageFragment"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_20">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_8"
        >
        <ImageView
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menuImg"
            android:background="@mipmap/common_nav_btn_menu_"
            />
        <EditText
            android:id="@+id/edit_ss"
            android:layout_marginTop="@dimen/dp_3"
            android:padding="@dimen/dp_5"
            android:layout_width="@dimen/dp_250"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="  搜你想搜的"
            android:textSize="@dimen/sp_13"
            android:background="@drawable/editext_style"
            />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/text_ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_10"
            android:text="搜索"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_Recy"
            >
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/li"
            android:visibility="gone"
            >
            <ImageView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_10"
                android:background="@drawable/sanjiao"
                />
            <android.support.v7.widget.RecyclerView
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/first_level_list_recy"
                android:background="#BF000000"
                ></android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/two_level_list_recy"
                android:background="#80000000"
                android:visibility="gone"
                ></android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>